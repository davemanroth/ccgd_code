.page-header
  %h1 Labgroups
%table#admin-table.table.table-hover.table-striped.table-responsive.labgroups-table
  %thead
    %tr
      %th.name Name
      %th.code Code
      %th.location Location
      %th.actions Actions
  %tbody
    - @lab_groups.each do |lg|
      %tr
        %td= lg.name
        %td= lg.code
        %td= lg.location.building_room if lg.location && lg.location != 'NULL'
        %td.address-admin-actions
          = link_to 'Edit', edit_labgroup_path(lg), class: 'btn btn-default pull-left'
          = link_to 'Delete', labgroup_path(lg), data: { confirm: 'Are you sure you want to delete this labgroup?' }, class: 'btn btn-primary', remote: true, method: :delete


