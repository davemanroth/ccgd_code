%h1 Welcome to the CCGD proposal submission website
-if logged_in?
  %h2 Hello, #{ current_user.firstname }!
  - if can? :manage, :all
    .row
      .col-md-10
        #pending.panel.panel-default
          .panel-heading
            %h3.panel-title Pending statuses
          .panel-body
            .col-md-6
              %h4 Pending users
              - if pending_users = User.pending
                %ul
                  - pending_users.each do |u|
                    %li= link_to u.username, edit_user_path(u)
              =link_to "View all users", users_path, class: 'btn btn-success'
            .col-md-6
              %h4 Pending proposals
              - if pending_proposals = Proposal.pending
                %ul
                  - pending_proposals.each do |p|
                    %li= link_to p.name, edit_proposal_path(p)
              =link_to "View all proposals", proposals_path, class: 'btn btn-success'

-else
  %p Please log in to proceed into the site.
  .row
    .col-md-6
      .panel.panel-default
        .panel-body
          = form_for(:session, url: login_path) do |f|
            .form-group
              = f.label :username
              = f.text_field :username, placeholder: "Username", class: 'form-control', required: true 

            .form-group
              = f.label :password
              = f.password_field :password, placeholder: "Password", class: 'form-control', required: true 
            = f.submit "Log in", class: 'btn btn-primary btn-lg'
            %p.small Don't have an account yet? #{link_to "Create an account", signup_path}
            %p.small Forgot your password? #{link_to "Reset password", new_password_reset_path}
