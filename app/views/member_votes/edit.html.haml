.page-header
  - title = voted?(@member_vote) ? 'Edit' : 'New'
  - button_text = voted?(@member_vote) ? 'Update' : 'Cast'
  %h1 #{title} committee vote
%h2 Proposal information
= render 'shared/proposal_static_data', proposal: @proposal
%h2 Your vote
= form_for [@proposal, @committee, @member_vote] do |f|
  .form-inline
    .form-group
      = f.radio_button :vote, 1, checked: @member_vote.vote_id == 1, class: "form-control"
      = f.label :vote, "Approve"
    .form-group
      = f.radio_button :vote, 2, checked: @member_vote.vote_id == 2, class: "form-control"
      = f.label :vote, "Reject"
    .form-group
      = f.radio_button :vote, 3, checked: @member_vote.vote_id == 3, class: "form-control"
      = f.label :vote, "Request revision"
  .comments.clearfix
    .form-group
      = f.label :comment, "Comments"
      = f.text_area :comment, class: 'form-control'
  = f.submit "#{button_text} vote", class: 'btn btn-primary btn-lg'
