.page-header
  %h1 Organizations
%table#admin-table.table.table-hover.table-striped.table-responsive.organizations-table
  %thead
    %tr
      %th.name Name
      %th.phone Phone
      %th.email Email
      %th.address Address
      %th.actions Actions
  %tbody
    - @organizations.each do |org|
      %tr
        %td= org.name
        %td= org.phone
        %td= org.email
        %td= org.address.full_address if org.address && org.address != 'NULL'
        %td.address-admin-actions
          = link_to 'Edit', edit_organization_path(org), class: 'btn btn-default pull-left'
          = link_to 'Delete', organization_path(org), data: { confirm: 'Are you sure you want to delete this address?' }, class: 'btn btn-primary', remote: true, method: :delete

