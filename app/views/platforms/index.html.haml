.page-header
  %h1 Platforms
%table#admin-table.table.table-hover.table-striped.table-responsive.platforms-table
  %thead
    %tr
      %th.street Name
      %th.city Code
      %th.actions Actions
  %tbody
    - @platforms.each do |plat|
      %tr
        %td= plat.name
        %td= plat.code
        %td.location-admin-actions
          = link_to 'Edit', edit_platform_path(plat), class: 'btn btn-default pull-left'
          = link_to 'Delete', platform_path(plat), data: { confirm: 'Are you sure you want to delete this location?' }, class: 'btn btn-primary', remote: true, method: :delete
