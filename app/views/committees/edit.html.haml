.page-header
  %h1 Edit a committee
= render 'shared/proposal_static_data', proposal: @proposal
- if can? :manage, Committee
  %h2 Administrator area
  #committee-formation.panel.panel-default
    .panel-heading
      %h3.panel-title Modify the deadline and committee member selections
    .panel-body
      = form_for [@proposal, @committee] do |f|
        = render 'committee_fields', f: f
        = f.submit "Update committee", class: 'btn btn-info btn-lg'
