%h1 Password reset
.row
  .col-md-6
    =form_tag(password_resets_path, method: :post) do
      .form-group
        =label_tag :email, "Enter your account email address"
        =text_field_tag :email, params[:email], placeholder: "Email", class: "form-control", required: true
      =submit_tag "Reset password", class: 'btn btn-primary btn-lg'
