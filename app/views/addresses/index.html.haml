.page-header
  %h1 Addresses
%table#admin-table.table.table-hover.table-striped.table-responsive.addresses-table
  %thead
    %tr
      %th.street Street
      %th.city City
      %th.state State
      %th.country Country
      %th.actions Actions
  %tbody
    - @addresses.each do |addr|
      %tr
        %td= addr.street
        %td= addr.city
        %td= addr.state.name if addr.state
        %td= addr.country if addr.country != 'NULL'
        %td.address-admin-actions
          = link_to 'Edit', edit_address_path(addr), class: 'btn btn-default pull-left'
          = link_to 'Delete', address_path(addr), data: { confirm: 'Are you sure you want to delete this address?' }, class: 'btn btn-primary', remote: true, method: :delete
